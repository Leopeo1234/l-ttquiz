document.getElementById('shareButton').addEventListener('click', function() {
  // Skapar en temporär textarea för att kopiera länken
  const tempInput = document.createElement('textarea');
  tempInput.value = window.location.href;
  document.body.appendChild(tempInput);
  tempInput.select();
  
  // Kopierar till urklipp
  document.execCommand('copy');
  document.body.removeChild(tempInput);
  
  // Visar bekräftelse
  alert('Länken har kopierats: ' + window.location.href);
  
  // Alternativ: Visa en snygg popup istället för en alert
  // createCustomNotification('Länken kopierad!');
});
